{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "extension/build",
        "lib": [
			"ES2020"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "typeRoots": ["./node_modules/@types"]
	},
	"include": [
		"src"
	],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
